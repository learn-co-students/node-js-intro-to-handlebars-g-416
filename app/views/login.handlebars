{{#if message}}
<div class="error">
  <span style="color: red">{{message}}</span>
</div>
{{/if}}
<form action="/login" method="post">
  <h1>Login Page</h1>
  <div>
      <label>Username:</label>
      <input type="text" name="username" />
  </div>
  <div>
      <label>Password:</label>
      <input type="password" name="password" />
  </div>
  <button type="submit">Login</button>
</form>
